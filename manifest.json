{
    "manifest_version": 3,
    "name": "Element Clip - DOM要素コピペツール",
    "version": "1.2.1",
    "description": "Webページから指定したDOM要素の値を抽出し、別のページで貼り付けるツール",
    "permissions": [
        "activeTab",
        "storage",
        "scripting",
        "sidePanel"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "side_panel": {
        "default_path": "sidepanel.html"
    },
    "action": {
        "default_title": "Element Clip を開く"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "utils.js",
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}